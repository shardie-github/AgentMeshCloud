{
  "name": "agentmesh-cloud",
  "version": "1.0.0",
  "description": "AgentMesh Cloud - Cognitive Automation Platform",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "ecosystem",
    "digital-twin",
    "aiops",
    "partners"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:status": "prisma migrate status",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "bundle:analyze": "node scripts/bundle-report.mjs",
    "secrets:scan": "node scripts/secrets-scan.mjs",
    "db:performance": "node scripts/db-slowquery-check.mjs",
    "rls:smoke": "tsx scripts/rls-smoke.ts",
    "cost:guard": "node scripts/cost-guard.mjs",
    "health:check": "node scripts/healthcheck.js",
    "security:audit": "pnpm audit --audit-level moderate",
    "smoke:test": "node scripts/playwright-smoke.js",
    "load:test": "k6 run scripts/k6-load-test.js",
    "performance:test": "pnpm run smoke:test && pnpm run load:test"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0",
    "tsx": "^4.6.0",
    "turbo": "^1.11.0",
    "typescript": "^5.3.0",
    "playwright": "^1.40.0",
    "k6": "^0.0.0"
  },
  "engines": {
    "node": ">=18.18.0 <20.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}

# EditorConfig - Consistent coding styles across editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2

[*.{json,yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.go]
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4

[Makefile]
indent_style = tab

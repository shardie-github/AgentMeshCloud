# EditorConfig - consistent coding styles across editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{ts,tsx,js,jsx,mjs,cjs}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[*.sql]
indent_size = 2

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.py]
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

{
  "dashboard": {
    "title": "ORCA AgentMesh Observatory",
    "tags": ["orca", "agentmesh", "uadsi"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Trust Score",
        "type": "gauge",
        "gridPos": {"x": 0, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "orca_trust_score",
            "legendFormat": "Trust Score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.5, "color": "yellow"},
                {"value": 0.85, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Risk Avoided (USD)",
        "type": "stat",
        "gridPos": {"x": 6, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "orca_risk_avoided_usd",
            "legendFormat": "Risk Avoided",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "currencyUSD",
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 5000, "color": "yellow"},
                {"value": 10000, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Sync Freshness %",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "orca_sync_freshness_pct",
            "legendFormat": "Sync Freshness",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 50, "color": "yellow"},
                {"value": 90, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Compliance SLA %",
        "type": "gauge",
        "gridPos": {"x": 18, "y": 0, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "orca_compliance_sla_pct",
            "legendFormat": "Compliance SLA",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 95, "color": "yellow"},
                {"value": 99, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Active Agents",
        "type": "stat",
        "gridPos": {"x": 0, "y": 8, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "orca_active_agents",
            "legendFormat": "Agents",
            "refId": "A"
          }
        ]
      },
      {
        "id": 6,
        "title": "Active Workflows",
        "type": "stat",
        "gridPos": {"x": 4, "y": 8, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "orca_active_workflows",
            "legendFormat": "Workflows",
            "refId": "A"
          }
        ]
      },
      {
        "id": 7,
        "title": "Total Events",
        "type": "stat",
        "gridPos": {"x": 8, "y": 8, "w": 4, "h": 4},
        "targets": [
          {
            "expr": "orca_total_events",
            "legendFormat": "Events",
            "refId": "A"
          }
        ]
      },
      {
        "id": 8,
        "title": "Drift Rate %",
        "type": "gauge",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 4},
        "targets": [
          {
            "expr": "orca_drift_rate_pct",
            "legendFormat": "Drift Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 5, "color": "yellow"},
                {"value": 10, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "API Latency (p95)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_ms_bucket[5m]))",
            "legendFormat": "p95 latency",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(http_requests_total{status=~\"5..\"}[5m])",
            "legendFormat": "5xx errors",
            "refId": "A"
          }
        ]
      }
    ]
  }
}

# NPM Configuration for consistent package management

# Save exact versions (no ^ or ~)
save-exact=true

# Prefer offline packages
prefer-offline=true

# Disable package-lock for pnpm monorepo
package-lock=false

# Auto-install peers
auto-install-peers=true

# Strict peer dependencies
strict-peer-dependencies=false

# Engine strict (enforce Node version)
engine-strict=true

# Legacy peer deps (for compatibility)
legacy-peer-deps=false

# Audit level
audit-level=moderate

# Progress display
progress=true

# Fund messages
fund=false

# Optional dependencies
optional=true

# Save prefix (empty for exact)
save-prefix=

# Public registry
registry=https://registry.npmjs.org/

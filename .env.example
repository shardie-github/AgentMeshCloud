# ORCA Core - Environment Variables
# Copy this file to .env and configure for your environment

# Environment
NODE_ENV=development
ENVIRONMENT=development

# Server
PORT=3000
HOST=0.0.0.0
LOG_LEVEL=info

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=orca_mesh
DB_USER=orca
DB_PASSWORD=orca_dev_pass
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=public

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=orca-mesh
OTEL_SERVICE_VERSION=1.0.0

# Authentication (configure for your identity provider)
JWT_SECRET=your-jwt-secret-here-change-in-production
JWT_ISSUER=https://auth.acme.com
JWT_AUDIENCE=orca-mesh
API_KEY_HEADER=X-API-Key

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Agent Discovery
ENABLE_DISCOVERY=false
DISCOVERY_INTERVAL_MS=900000

# MCP Registry
MCP_REGISTRY_PATH=./mcp_registry.yaml

# AWS (for KMS, if using)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
KMS_KEY_ID=

# Secrets Management
# Use kms:// or vault:// prefixes for external secret managers
# Example: SECRET_API_KEY=kms://arn:aws:kms:us-east-1:123456789012:key/abc123

# Feature Flags
ENABLE_GRAPHQL=false
ENABLE_WEBSOCKETS=false
ENABLE_CONTEXT_BUS=false

# Performance
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT_MS=30000

# Security
ENABLE_HELMET=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

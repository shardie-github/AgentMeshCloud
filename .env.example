# ORCA Core - Environment Variables Template
# Copy to .env and fill in your values

# ============================================================================
# Prisma Configuration (Required)
# ============================================================================
PRISMA_CLIENT_ENGINE_TYPE=wasm

# ============================================================================
# Supabase Configuration (Required)
# ============================================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_DB_URL=postgresql://postgres:[password]@db.your-project.supabase.co:5432/postgres

# ============================================================================
# Vercel Configuration (Production)
# ============================================================================
VERCEL_URL=https://your-project.vercel.app
NODE_ENV=development

# ============================================================================
# Optional: AI Features (BugBot Enhanced Mode)
# ============================================================================
# OPENAI_API_KEY=sk-your-openai-key-here

# ============================================================================
# Optional: Observability
# ============================================================================
# OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
# PROMETHEUS_ENDPOINT=http://localhost:9090

# ============================================================================
# Optional: Feature Flags
# ============================================================================
# ENABLE_NEW_TRUST_ALGORITHM=false
# ENABLE_ADVANCED_POLICIES=false

# ============================================================================
# Development
# ============================================================================
DEBUG=orca:*
LOG_LEVEL=debug

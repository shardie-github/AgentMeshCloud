# Database Configuration
DATABASE_URL=postgresql://orca:orca_secure_pass@localhost:5432/orcamesh
PGHOST=localhost
PGPORT=5432
PGUSER=orca
PGPASSWORD=orca_secure_pass
PGDATABASE=orcamesh

# API Configuration
NODE_ENV=development
PORT=3000
API_HOST=0.0.0.0
API_VERSION=1.0.0

# Security
JWT_SECRET=your-jwt-secret-min-32-chars-change-in-production
HMAC_SECRET=your-hmac-secret-for-adapter-webhooks-change-in-production
ADAPTER_SECRET=your-adapter-webhook-verification-secret

# OpenTelemetry Configuration
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=orca-agentmesh
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp
OTEL_LOGS_EXPORTER=otlp

# Seed Data
SEED=true

# Adapter Configuration
ZAPIER_WEBHOOK_SECRET=your-zapier-webhook-secret
N8N_WEBHOOK_SECRET=your-n8n-webhook-secret

# MCP Configuration
MCP_REGISTRY_PATH=./src/registry/mcp_registry.schema.yaml

# Trust & UADSI Configuration
TRUST_SCORE_BASELINE=0.85
RISK_BASELINE_COST_USD=10000
SYNC_FRESHNESS_SLO_HOURS=24
DRIFT_THRESHOLD_PCT=5.0
COMPLIANCE_SLA_TARGET_PCT=99.5

# Observability
GRAFANA_URL=http://localhost:3001
PROMETHEUS_URL=http://localhost:9090

# Feature Flags
ENABLE_SELF_HEALING=true
ENABLE_DRIFT_DETECTION=true
ENABLE_TRUST_SCORING=true
